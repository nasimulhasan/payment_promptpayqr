<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment.payment_acquirer_promtpayqr" model="payment.acquirer">
            <field name="name">PromtpayQR</field>
            <field name="image" type="base64" file="payment_promtpayqr/static/src/img/transfer_icon.png"/>
            <field name="provider">promtpayqr</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="promtpayqr_acquirer_button"/>
            <field name="auto_confirm">none</field>
            <field name="environment">test</field>
            <field name="website_published" eval="True"/>
            <field name="pre_msg"><![CDATA[
<p>Transfer information will be provided after choosing the payment method.</p>]]>
            </field>
            <field name="description" type="html">
            <p>
                A payment gateway for Thai citizen. Using PromtPay ID.
            </p>
            <ul class="list-inline">
                <li><i class="fa fa-check"/>eCommerce</li>
            </ul>
        </field>
        </record>

        <template id="report_invoice">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h2>Report title</h2>
                            <p>This object's name is <span t-field="o.name"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
